<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="mariadbPU" transaction-type="JTA">
        <jta-data-source>jdbc/mariadbDS</jta-data-source>

        <class>org.citas.jakarta.hexagonal.infraestructure.adapters.out.mariadb.entity.AgenteEntity</class>

        <properties>
            <!-- URL de tu base de datos -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/citasdb"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>

            <!-- Mostrar SQL en consola -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
